<header>
  <h1>Listing users</h1>
</header>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Admin</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user) %></td>
        <td><%= user.admin %></td>
      </tr>
    <% end %>
  </tbody>

  <thead>
    <tr>
      <th>Username</th>
      <th>Admin</th>
    </tr>
  </thead>
</table>

<%= link_to 'New User', new_user_path %>
