<table>
  <thead>
  <tr>
    <th>Usages</th>
    <th>Points</th>
    <th>Question</th>
    <th>Answer</th>
    <th>Criteria</th>
  </tr>
  </thead>

  <tbody>
  <% exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.exams.size %></td>
        <td><%= exercise.points %></td>
        <td><%= link_to truncate(exercise.question, length:25), exercise_path(exercise) %></td>
        <td>
          <% if exercise.answer.nil? %>
              -
          <% else %>
            <%= link_to truncate(exercise.answer, length:25), exercise_path(exercise) %>
          <% end %>
        </td>
        <td>
          <% if exercise.criteria.nil? %>
              -
          <% else %>
            <%= link_to truncate(exercise.criteria, length:25), exercise_path(exercise) %></td>
          <% end %>
      </tr>
  <% end %>
  </tbody>

  <tfoot>
  <tr>
    <th>Usages</th>
    <th>Points</th>
    <th>Question</th>
    <th>Answer</th>
    <th>Criteria</th>
  </tr>
  </tfoot>
</table>