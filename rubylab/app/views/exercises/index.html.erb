<header>
  <h1>Listing exercises</h1>
</header>

<table>
  <thead>
    <tr>
      <th>Points</th>
      <th>Question</th>
      <th>Answer</th>
      <th>Criteria</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @exercises.each do |exercise| %>
      <tr>
        <td><%= exercise.points %></td>
        <td><%= exercise.question %></td>
        <td><%= exercise.answer %></td>
        <td><%= exercise.criteria %></td>
        <td><%= link_to 'Show', exercise %></td>
        <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
        <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  <thead>
    <tr>
      <th>Points</th>
