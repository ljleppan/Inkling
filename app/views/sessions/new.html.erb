<% content_for :header do %>
  Login
<% end %>

<%= form_tag sessions_path do %>
    <%= label_tag 'username' %> <%= text_field_tag :username, params[:username] %><br />
    <%= label_tag 'password' %> <%= password_field_tag :password, params[:password] %><br />
    <%= submit_tag "Log in" %>
<% end %>